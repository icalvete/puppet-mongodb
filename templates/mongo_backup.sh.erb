#!/bin/bash

BACKUP_DIR=<%= scope.lookupvar('mongodb::backup_directory') %>
DATE=`/bin/date +%Y%m%d%H%M`

cd $BACKUP_DIR
/usr/bin/mongodump
mv dump $DATE
/bin/tar cvfj ${DATE}.tar.bz2 $DATE

/usr/bin/find <%= scope.lookupvar('mongodb::backup_directory') -%> -maxdepth 1 -mindepth 1 -type d -mtime +<%= scope.lookupvar('mongodb::backup_retention') -%> -exec rm -fR {} \;
